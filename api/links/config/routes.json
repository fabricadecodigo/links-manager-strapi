{
  "routes": [
    {
      "method": "GET",
      "path": "/links",
      "handler": "links.find",
      "config": {
        "policies": ["global::hasCompany"]
      }
    },
    {
      "method": "GET",
      "path": "/links/count",
      "handler": "links.count",
      "config": {
        "policies": ["global::hasCompany"]
      }
    },
    {
      "method": "GET",
      "path": "/links/:id",
      "handler": "links.findOne",
      "config": {
        "policies": ["global::hasCompany"]
      }
    },
    {
      "method": "POST",
      "path": "/links",
      "handler": "links.create",
      "config": {
        "policies": ["global::hasCompany"]
      }
    },
    {
      "method": "PUT",
      "path": "/links/:id",
      "handler": "links.update",
      "config": {
        "policies": ["global::hasCompany"]
      }
    },
    {
      "method": "DELETE",
      "path": "/links/:id",
      "handler": "links.delete",
      "config": {
        "policies": ["global::hasCompany"]
      }
    }
  ]
}
